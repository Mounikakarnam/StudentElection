@model IEnumerable<StudentElection.Models.Election>

@{
    ViewBag.Title = "Election";
}

<h2>Election</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
       <tr> No Active elections </tr> 
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Candidates", "Candidates", new { id = item.id }) 
                </td>
            </tr>
        }
    }
</table>
